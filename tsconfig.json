{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@@components": ["src/components"],
      "@@components/*": ["src/components/*"],
      "@@utils": ["src/utils"],
      "@@utils/*": ["src/utils/*"]
    },
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  // "typeRoots": [
  //   "node_modules/@types"
  // ]
}